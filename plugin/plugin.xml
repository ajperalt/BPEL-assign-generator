<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="BPEL Assign Generator Action Set"
            visible="true"
            id="pl.eiti.bpelag.actionSet">
         <menu
               label="BPELcg"
               id="BPELMenu">
            <separator
                  name="bpelagGroup">
            </separator>
         </menu>
         <action
               label="Copy Generate"
               icon="icons/bpel-oasis.png"
               class="pl.eiti.bpelcg.actions.CopyGenerateAction"
               tooltip="BPEL Assign Generate"
               menubarPath="BPELMenu/bpelagGroup"
               toolbarPath="bpelagGroup"
               id="pl.eiti.bpelag.actions.AssignGenerateAction">
	         <visibleWhen checkEnabled="true">
	         	<with variable="activeWorkbenchWindow.activePerspectives">
	         		<equals value="BPEL" />
	         	</with>
	         </visibleWhen>
         </action>
      </actionSet>
   </extension>
</plugin>
